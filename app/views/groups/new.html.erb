<div class='payment-title'>
  <a href="<%= groups_path %>">
    <div class="back-container">
      <img src="<%= asset_path('back-white.png') %>" alt="Back" class="back-icon">
    </div>
  </a>
  <p class="payment-t">ADD A NEW CATEGORY</p>
</div>
<%= form_with model: @group, url: groups_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
  </div>
  <div class="form-group">
    <%= form.text_field :icon, class: "form-control", placeholder: "Enter URL icon" %>
  </div>
  <div class="form-group-btn add">
    <%= form.submit "ADD CATEGORY", class: "add-btn" %>
  </div>
<% end %>

