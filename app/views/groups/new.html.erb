<h2>Add a Category</h2>
<%= form_with model: @group, url: groups_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
  </div>
  <div class="form-group">
    <%= form.text_field :icon, class: "form-control", placeholder: "Enter URL icon" %>
  </div>
  <div class="form-group-btn">
    <%= form.submit "ADD CATEGORY", class: "btn btn-primary" %>
  </div>
<% end %>

